# Email Configuration
# IMAP server settings for monitoring GitLab notifications
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_MAILBOX=INBOX

# AI API Configuration
# URL and authentication for the AI ticket assignment service
AI_API_URL=http://ai-api:8000
AI_API_KEY=your-ai-api-key
AI_API_TIMEOUT=30

# GitLab Configuration
# GitLab instance URL and authentication
GITLAB_URL=https://gitlab.example.com
GITLAB_PRIVATE_TOKEN=your-gitlab-private-token

# Application Configuration
# How often to check for new emails (seconds)
CHECK_INTERVAL=60

# Minimum confidence threshold for AI recommendations (0.0-1.0)
MIN_CONFIDENCE=0.7

# Set to true to test without actually reassigning issues
DRY_RUN=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# AI Database Configuration (if using a database-backed AI service)
AI_DATABASE_URL=sqlite:///app/ai_data.db